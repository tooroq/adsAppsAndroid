<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MyAppLock"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingBottom="24dp"/>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/myapplock"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"/>

        <Button
            android:id="@+id/btnApps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="قائمة التطبيقات"
            android:background="#8BC34A"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="22dp"/>

        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="تغيير كلمة المرور"
            android:background="#F44336"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="22dp"/>

        <Button
            android:id="@+id/btnOverlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="تفعيل الظهور فوق التطبيقات"
            android:background="#03A9F4"
            android:layout_marginTop="52dp"/>

        <Button
            android:id="@+id/btnAccessibility"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="تفعيل خدمة الوصول (Accessibility)"
            android:background="#03A9F4"
            android:layout_marginTop="12dp"/>

    </LinearLayout>

</ScrollView>
